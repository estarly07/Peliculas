<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Peliculas" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="navigation_bar"  parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/bar</item>
    </style>
    <style name="background"  parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/background_night</item>
    </style>
    <style name="effect"  parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@drawable/efecto_traslucido</item>
    </style>
    <style name="effect_two"  parent="Theme.AppCompat.NoActionBar">
        <item name="android:src">@color/transparentBlack_two</item>
    </style>
    <style name="floating"  parent="Theme.AppCompat.NoActionBar">
        <item name="android:backgroundTint">@color/shadow_bar</item>
    </style>
    <style name="textPrimary" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textSeconary" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="navigation_icon"  parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/transparent</item>
        <item name="drawableTint">@color/navigation_icon_night</item>
        <item name="android:textColor">@color/navigation_icon_night</item>
    </style>
    <style name="navigation_icon_select"  parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/transparent</item>
        <item name="drawableTint">@color/navigation_icon_select</item>
        <item name="android:textColor">@color/navigation_icon_select</item>
    </style>
</resources>